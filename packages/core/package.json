{
  "name": "@promptise/core",
  "version": "2.0.0",
  "description": "A powerful and type-safe prompt engineering framework for TypeScript",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run --config vitest.config.ts",
    "test:coverage": "vitest run --config vitest.config.ts --coverage",
    "clean": "rm -rf dist coverage",
    "lint": "prettier --write . --cache --ignore-path ../../.prettierignore --log-level error && eslint . --fix",
    "lint:ci": "prettier --check . --cache --ignore-path ../../.prettierignore --log-level error && eslint .",
    "pack": "npm pack --dry-run",
    "preversion": "npm run validate:ci",
    "prepublishOnly": "npm run validate:ci",
    "validate": "npm run build && npm run lint && npm test",
    "validate:ci": "npm run build && npm run lint:ci && npm test"
  },
  "keywords": [
    "prompt-engineering",
    "llm",
    "typescript",
    "ai",
    "openai",
    "anthropic",
    "claude",
    "gpt",
    "gemini",
    "langchain",
    "mastra",
    "zod",
    "type-safe",
    "prompt-template",
    "promptise"
  ],
  "author": "Promptise",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/promptise/promptise.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/promptise/promptise#readme",
  "bugs": {
    "url": "https://github.com/promptise/promptise/issues"
  },
  "peerDependencies": {
    "zod": "^4.1.12"
  },
  "dependencies": {
    "@toon-format/toon": "^2.1.0",
    "js-tiktoken": "^1.0.21",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "zod": "^4.1.12"
  }
}
