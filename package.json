{
  "name": "promptise",
  "version": "1.0.0",
  "private": true,
  "description": "A powerful and type-safe prompt engineering framework for TypeScript",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:ci": "npm run lint:ci --workspaces --if-present",
    "validate": "npm run lint && npm run test && npm run build",
    "validate:ci": "npm run lint:ci && npm run test && npm run build",
    "pack": "npm run pack --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "clean:deps": "rm -rf node_modules packages/*/node_modules package-lock.json packages/*/package-lock.json",
    "clean:all": "npm run clean && npm run clean:deps",
    "prepare": "husky"
  },
  "keywords": [
    "prompt-engineering",
    "llm",
    "typescript",
    "ai",
    "cli",
    "promptise"
  ],
  "author": "Promptise",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/promptise/promptise.git"
  },
  "homepage": "https://github.com/promptise/promptise#readme",
  "bugs": {
    "url": "https://github.com/promptise/promptise/issues"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0"
  }
}
